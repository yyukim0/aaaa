void handle_input() { //função para pegar as respostas escritas do usuario
    ALLEGRO_EVENT ev; //você PRECISA declarar os eventos como uma variavel de novo
    while (al_get_next_event(event_queue, &ev)) {
       if (ev.keyboard.keycode == ALLEGRO_KEY_Z) { // Verifica se a tecla Z está pressionada
            if (input_active) { //se a caixa de texto para escrever esta ativada
                if (ev.keyboard.keycode == ALLEGRO_KEY_BACKSPACE) {  
                    int len = strlen(player_input); // len recebe o tamanho da string
                    if (len > 0) player_input[len - 1] = '\0'; // Remove o último caractere (explicar porque desse \0)
                } else if (ev.keyboard.keycode == ALLEGRO_KEY_ENTER) {
                    if (strcmp(player_input, "1412") == 0) { // o strcmp compara strigs (strcmp é muito interessante btw)
                        message = "você encontrou um objeto";
                    } else {
                        message = "parece que a resposta está errada";
                    }
                    input_active = false; // variavel de caixa digitada está falsa
                    player_input[0] = '\0'; // você está basicamente falando "ó, termina aqui" (explicar)
                } else if (strlen(player_input) < sizeof(player_input) - 1) { //se o tamanho da resposta do player for menor que o total de caracteres que ele pode colocar
                    player_input[strlen(player_input)] = ev.keyboard.keycode; // seria tipo player_input[4] = 'A'

                  }
            }
        }
    }
    player_input[strlen(player_input)] = '\0'; // garante que a string termina
}
